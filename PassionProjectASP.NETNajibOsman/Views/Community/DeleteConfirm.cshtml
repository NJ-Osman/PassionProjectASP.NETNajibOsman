@model PassionProjectASP.NETNajibOsman.Models.CommunityDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>

<h2>Are you sure you want to delete this Community?</h2>
<a href="/Community/List">Cancel</a>
<h3>Community Name: @Model.CommunityName</h3>
<p>Bio: @Model.CommunityBio</p>
<form action="/Community/Delete/@Model.CommunityID" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>

